page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.size-full {
  width: 100%;
  height: 100%;
}

.size-half {
  width: 50%;
  height: 50%;
}

.size-half-row {
  width: 50%;
  height: 100%;
}

.row-direction {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.row-three {
  height: 100%;
  width: 33.3%;
}

.div-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex{
  display: flex;
}

.bk-color-theme{
  background-color: #ff6a6a;
}

.font-color-theme{
  color: #ff6a6a;
}

.absolute{
  position: absolute;
}

.relative{
  position: relative;
}

/* 字体描边 */
.shadow{
  text-shadow:0 0 0.1em #fff,-0 -0 0.08em #000000;
}

.bg-color{
  background-color: #ff6a6a;
}

.swiper-text {
  left: 40rpx;
  bottom: 40rpx;
  width: 80%;
  color: #f6f6f6;
  overflow: hidden;
  font-size: 34rpx;
  font-family: 微软雅黑;
}

/* 推荐 */
.scroll-x {
  display: flex;
  flex-direction: row;
}

.scroll-y {
  display: flex;
  flex-direction: column;
}

.scroll-img-cell{
  height: 80%;
  width: 90%;
  margin-top: 7%;
  margin-left: 7%;
}

.scroll-title{
  height: 50rpx;
  width: 700rpx;
  font-weight: bold;
}

.scroll-title text{
  font-size: 24rpx;
  padding-left: 20rpx;
}

.scroll-img-title{
  font-size: 28rpx;
  padding: 8rpx 20rpx 8rpx 20rpx;
  width: 90%;
  overflow: hidden;
  text-overflow:ellipsis;
  z-index: 99;
}

/* 边框阴影 */
.box-shadow{
  box-shadow:0 0 3px 1px #e6ebf0;
}

/* 水平垂直居中 */
.div-center{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

/* 回首页 */
.return-home{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  background-color: #ff6a6a;
  border-radius: 50%;
  right: 30rpx;
  bottom: 50rpx;
}