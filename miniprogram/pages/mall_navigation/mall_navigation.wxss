/* miniprogram/pages/mall_navigation/mall_navigation.wxss */
@import "../../style/public.wxss";

.container {
  background-color: #f6f6f6;
  height: 100%;
}

.header {
  width: 100%;
  height: 350rpx;
  background-color: #2d91ff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  top: 50rpx;
  left: 30rpx;
  overflow: hidden;
}

.name {
  width: 180rpx;
  height: 20rpx;
  top: 190rpx;
  left: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.total-title {
  width: 170rpx;
  height: 20rpx;
  top: 140rpx;
  right: 30rpx;
  text-align: right;
  font-size: 24rpx;
  color: #fff;
}

.total {
  width: 150rpx;
  height: 20rpx;
  top: 190rpx;
  right: 30rpx;
  color: #fff;
  text-align: right;
}

.floor-menu {
  width: 650rpx;
  height: 150rpx;
  background-color: #fff;
  left: 50rpx;
  top: 275rpx;
  border-radius: 10rpx;
  display: flex;
}

.floor {
  width: 20%;
  height: 150rpx;
  position: relative;
}

.floor-avatar {
  width: 100rpx;
  height: 100rpx;
  /* background-color: #000; */
  border-radius: 50rpx;
}

.navigation {
  width: 750rpx;
  height: 500rpx;
  background-color: #fff;
}
