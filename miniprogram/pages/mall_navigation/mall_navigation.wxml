<!--miniprogram/pages/mall_navigation/mall_navigation.wxml-->
<view class="container" hidden="{{hidden}}">
  <!-- 头部 -->
  <view class="header relative">
    <view class="avatar absolute">
      <image class="size-full" src="../../public/images/jjmall.jpg" mode="aspectFit"></image>
    </view>
    <view class="name absolute">JJMall购物中心</view>
    <view class="current-floor absolute">当前楼层：<span style="color:#ff6a6a;font-size: 34rpx">{{num}}</span></view>
    <!-- <view class="total-title absolute">商店总数</view>
    <view class="total absolute">12</view> -->
    <view class="floor-menu absolute box-shadow">
      <view class="floor" wx:for="{{floor}}" wx:key="{{item}}">
        <view class="floor-avatar div-center" data-item="{{item}}" bindtap="floorTap">{{item.floor_name}}</view>
      </view>
    </view>
  </view>
  <!-- 占位 -->
  <view style="width: 100%;height:120rpx;background-color:#fff;"></view>
  <!-- 落位图 -->
  <view class="navi">
    <image wx:if="{{imgUrl && img_url}}" class="size-full" src="{{imgUrl + img_url}}" mode="aspectFit" data-img="{{imgUrl + img_url}}" bindtap="preimage"></image>
  </view>
</view>