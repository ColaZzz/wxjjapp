<!--miniprogram/pages/jjmall/business/business.wxml-->
<view class="container">
  <!-- 筛选框 -->
  <!-- <view class="filter-view">
    <wux-filterbar class="filter" items="{{ items }}" bind:change="onChange" />
  </view> -->
  <!-- 单元 -->
  <view class="cell">
    <block wx:for="{{List}}" wx:key="{{item.id}}">
      <view class="card-cell">
        <van-card data-item="{{item}}" bindtap="topTap" desc="{{item.subtitle}}" title="{{item.title}}" thumb="{{imgUrl + item.img_url}}" thumb-mode="aspectFill" />
      </view>
    </block>
  </view>
  <!-- 页底提示 -->
  <view style="width: 100%; height:50rpx;">
    <i-load-more tip="{{tip}}" loading="{{loadMore}}" />
  </view>
</view>
<!-- 浮动按钮 -->
<wux-floating-button position="{{ position }}" action="{{ action }}" theme="{{ theme }}" buttons="{{ buttons }}"  bind:click="onClick" />