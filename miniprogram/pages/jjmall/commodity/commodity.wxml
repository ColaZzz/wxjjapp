<!--miniprogram/pages/jjmall/commodity/commodity.wxml-->
<view class="container" hidden="{{hidden}}">
  <view class="header">
    <view class="swiper">
      <swiper class="size-full" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorColor}}">
        <swiper-item wx:for="{{commodity.commodity_images}}" wx:key="{{item.key}}">
          <image class="size-full" src="{{imgUrl + item.img_url}}" mode="aspectFill" />
        </swiper-item>
      </swiper>
    </view>
    <view class="text">
      <view class="name">{{commodity.name}}</view>
      <view class="price">￥{{commodity.price}}</view>
      <view class="zan">
        <image class="size-full" src="/public/icon/zan2.png" mode="aspectFit"></image>
      </view>
    </view>
  </view>
  <view class="shop">
    <view class="navigation">所属商户</view>
    <view class="icon">
      <image wx:if="{{commodity}}" class="size-full" src="{{imgUrl + commodity.shop.img_url}}" mode="aspectFill"></image>
    </view>
    <view class="title">{{commodity.shop.title}}</view>
    <view class="shop-zan">
      <image wx:if="{{commodity}}" class="size-full" src="/public/icon/zan.png" mode="aspectFit"></image>
    </view>
    <view class="spent" wx:if="{{commodity.shop.average_spent}}">￥{{commodity.shop.average_spent}}/人</view>
    <view class="customize">{{commodity.shop.customize_type}}</view>
  </view>
</view>