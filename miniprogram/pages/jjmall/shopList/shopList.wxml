<!--miniprogram/pages/jjmall/floor/floor.wxml-->
<view class="container">
  <!-- 搜索框 -->
  <view class="search">
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" bind:search="onSearch">
    </van-search>
  </view>
  <!-- 筛选框 -->
  <!-- <view class="filter-view">
    <wux-filterbar class="filter" items="{{ items }}" bind:change="onChange" />
  </view> -->
  <!-- 单元 -->
  <view class="cell">
    <block wx:for="{{List}}" wx:key="{{item.id}}">
      <view class="card-cell">
        <van-card data-item="{{item}}" bindtap="shopTap" desc="{{item.subtitle}}" title="{{item.title}}" thumb="{{imgUrl + item.img_url}}" tag="{{item.floor.floor_name}}" thumb-mode="aspectFill" currency="" price="人均￥{{item.average_spent}}">
          <view slot="tags">
            <van-tag wx:if="{{item.customize_type}}" plain type="primary">{{item.customize_type}}</van-tag>
          </view>
        </van-card>
      </view>
    </block>
  </view>
  <!-- 页底提示 -->
  <view style="width: 100%; height:50rpx;">
    <i-load-more tip="{{tip}}" loading="{{loadMore}}" />
  </view>
</view>