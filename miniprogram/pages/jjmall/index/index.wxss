/* miniprogram/pages/jjmall/index/index.wxss */
@import "../../../style/public.wxss";

.container {
  background-color: #fff;
  height: 100%;
}

.swiper {
  width: 710rpx;
  height: 330rpx;
  margin-top: 30rpx;
}

.swiper image {
  border-radius: 30rpx;
}

.search {
  width: 750rpx;
}

.business {
  display: flex;
  flex-wrap: wrap;
  width: 710rpx;
  background-color: #fff;
}

.business-box {
  width: 20%;
  height: 120rpx;
  margin: 5rpx 0;
}

.business-box-img {
  height: 60%;
  width: 100%;
}

.business-box-txt {
  height: 40%;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
}

.popular {
  width: 710rpx;
  background-color: #fff;
}

.popular-header {
  width: 100%;
}

.popular-warp{
  display: flex;
  flex-wrap: wrap;
  width: 710rpx;
  background-color: #fff;
  justify-content: space-between;
}

.popular-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.popular-box {
  width: 32%;
  height: 300rpx;
  
}

.van-cell-text {
  font-size: 32rpx;
}

.popular-box-img {
  width: 100%;
  height: 180rpx;
}

.popular-box-txt {
  width: 100%;
  height: 120rpx;
  
}

.popular-box-txt-title {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
}

.popular-box-txt-subtitle {
  width: 100%;
  height: 50rpx;
  font-size: 26rpx;
}



