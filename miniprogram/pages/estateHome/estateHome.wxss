/* miniprogram/pages/estateHome/estateHome.wxss */
@import "../../style/public.wxss";

.container {
  background-color: #f6f6f6;
  height: 100%;
  position: absolute;
}

.swiper {
  width: 750rpx;
  height: 450rpx;
  background-color: #fff;
}

.content-body{
  width: 90%;
  height: 350rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}

.content-top{
  width: 100%;
  height: 25%;
  border-bottom: 3rpx solid #f6f6f6;
  box-sizing: border-box;
  position: relative;
  display: flex;
}

.content-bottom{
  width: 100%;
  height: 75%;
}

.title{
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0 0 30rpx;
}

.state{
  font-size: 26rpx;
  margin: 25rpx 0 0 30rpx;
  color: #ff6a6a;
}

.yiled{
  width:100%;
  height:10%;
}

.yiled-bottom{
  width:100%;
  height:6%;
}

.text-row{
  width:100%;
  height:18%;
  font-size: 26rpx;
}

.text-row view{
  margin-left: 30rpx;
}

.text-row text{
  color: #ff6a6a;
}

.btn-more{
  width:33%;
  height:20%;
  background-color: #E5E5E5;
  font-size: 28rpx;
  margin:0 auto;
  border-radius: 10rpx;
  text-align: center;
  line-height: 180%;
}

.entrance{
  width: 90%;
  height: 70rpx;
  background-color: #fff;
  margin-top: 20rpx;
  position: relative;
}

.entrance view{
  font-size: 28rpx;
  line-height: 250%;
  margin-left: 30rpx;
  font-weight: bold;
}

.entrance image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
}

.phone-tap{
  position: absolute;
  width: 80%;
  height: 80rpx;
  background-color: #02c95b;
  bottom: 15rpx;
  border-radius: 8rpx;
}

.phone-tap view{
  color: #fff;
  text-align: center;
  line-height: 250%;
  font-size: 34rpx;
}