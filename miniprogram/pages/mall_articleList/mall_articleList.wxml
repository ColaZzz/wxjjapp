<!--miniprogram/pages/mall_articleList/mall_articleList.wxml-->
<view class="container">
  <!-- 筛选 -->
  <view class="filter-view">
    <wux-filterbar class="filter" items="{{ items }}" bind:change="onChange" />
  </view>
  <!-- 列表 -->
  <view class="tab-cell" wx:for="{{articleList}}" wx:key="{{item.id}}" data-id="{{item.id}}" bindtap="cellTap">
    <van-card currency="" price="{{item.created}}" desc="{{item.subtitle}}" title="{{item.title}}" thumb="{{item.img_url}}" thumb-mode="{{mode}}" lazy-load="{{lazyLoad}}" tag="{{item.state}}" />
  </view>
  <!-- loadmore -->
  <view style="width: 100%; height:50rpx;">
    <i-load-more tip="{{tip}}" loading="{{loadMore}}" />
  </view>
</view>