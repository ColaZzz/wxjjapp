/* miniprogram/pages/mall/mall.wxss */
@import "../../style/public.wxss";

.container {
  background-color: #ffffff;
  height: 100%;
}

.header{
  display: flex;
  width: 95%;
  height: 230rpx;
  background-color: #000;
}

.menu{
  position: relative;
  height: 100%;
  width: 20%;
  background-color: #fff;
}

.icon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
}

.text{
  width: 100%;
  height: 30rpx;
  position: absolute;
  text-align: center;
  font-family: 微软雅黑;
  /* font-weight: bold; */
  font-size: 28rpx;
  bottom: 15rpx;
}

.swiper{
  width: 95%;
  height: 350rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.tabs{
  width: 95%;
  height: 100%;
}