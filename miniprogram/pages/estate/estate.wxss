/* miniprogram/pages/estate/estate.wxss */
@import "../../style/public.wxss";

.container {
  /* width: 100%;
  height: 100%; */
  background-color: #f6f6f6;
  /* position: absolute; */
}

.list-cell {
  width: 90%;
  height: 500rpx;
  background-color: #fff;
  margin: 9rpx 0;
}

.list-top {
  width: 100%;
  height: 30%;
}

.list-bottom {
  width: 100%;
  height: 70%;
}

.list-top-left {
  width: 25%;
  height: 100%;
}

.list-top-right {
  width: 75%;
  height: 100%;
}

.list-bottom-left {
  width: 25%;
  height: 100%;
}

.list-bottom-right {
  width: 75%;
  height: 100%;
}

.list-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin: auto;
}

.list-state {
  width: 50%;
  height: 40rpx;
  margin-left: 25%;
  margin-top: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #ff6a6a;
}

.list-price {
  width: 100%;
  height: 40rpx;
  margin-top: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #ff6a6a;
}

.bgcolor-blue {
  background-color: #e0eeee;
}

.title-area {
  width: 100%;
  height: 60%;
  font-size: 28rpx;
}

.title {
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.area {
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.address-view {
  width: 100%;
  height: 40%;
  font-size: 24rpx;
  position: relative;
}

.add-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  position: absolute;
  bottom: 40%;
}

.address {
  margin-top: 20rpx;
  margin-left: 60rpx;
  position: absolute;
  bottom: 40%;
}
