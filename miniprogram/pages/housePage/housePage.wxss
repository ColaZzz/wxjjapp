/* miniprogram/pages/housePage/housePage.wxss */
@import "../../style/public.wxss";

.container {
  background-color: #ffffff;
  height: 100%;
}

.swiper {
  width: 750rpx;
  height: 450rpx;
  background-color: #fff;
  border-bottom: 20rpx solid #f6f6f6;
}

.content {
  width: 95%;
  height: 450rpx;
  margin: 20rpx 0;
  background-color: #fff;
  border-bottom: 20rpx solid #f6f6f6;
}

.first-text {
  height: 25%;
  width: 100%;
  background-color: #fff;
  line-height: 300%;
  padding-left: 20rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.end-text {
  height: 25%;
  width: 100%;
  background-color: #fff;
  padding-left: 20rpx;
  border-top: 2rpx solid #f6f6f6;
  line-height: 330%;
  font-size: 30rpx;
}

.ordinary-text {
  height: 16%;
  width: 100%;
  background-color: #fff;
  padding-left: 20rpx;
  font-size: 28rpx;
}

.padding-left {
  padding-left: 150rpx;
}

.phone-tap {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 50rpx;
  right: 50rpx;
  border-radius: 40rpx;
}

.summary {
  width: 95%;
  background-color: #fff;
}

.title {
  height: 30rpx;
  width: 100%;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  display: flex;
}

.summary-content {
  font-size: 28rpx;
  padding: 20rpx 50rpx;
}

.wechat-tap {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 150rpx;
  right: 50rpx;
  border-radius: 40rpx;
}

.wechat-tap button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  position: relative;
  z-index: 2;
}

.button-image{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  left: 0;
  z-index: 1
}

.enter-img{
  width: 40rpx;
  height: 40rpx;
  right: 110rpx;
  top: 35rpx;
}

.end-text span{
  color: #72ACE3;
}