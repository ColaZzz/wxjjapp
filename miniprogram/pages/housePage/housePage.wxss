/* miniprogram/pages/housePage/housePage.wxss */
@import "../../style/public.wxss";

.container {
  background-color: #f6f6f6;
  height: 100%;
}

.swiper {
  width: 750rpx;
  height: 450rpx;
  background-color: #fff;
}

.content {
  width: 100%;
  height: 450rpx;
  margin: 20rpx 0;
  background-color: #fff;
}

.first-text {
  height: 25%;
  width: 100%;
  background-color: #fff;
  line-height: 300%;
  padding-left: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.end-text {
  height: 25%;
  width: 100%;
  background-color: #fff;
  padding-left: 50rpx;
  border-top: 2rpx solid #f6f6f6;
  line-height: 330%;
  font-size: 30rpx;
}

.ordinary-text {
  height: 16%;
  width: 100%;
  background-color: #fff;
  padding-left: 50rpx;
  font-size: 28rpx;
}

.padding-left {
  padding-left: 150rpx;
}

.phone-tap {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 50rpx;
  right: 50rpx;
  border-radius: 40rpx;
}

.summary {
  width: 100%;
  background-color: #fff;
}

.title {
  height: 30rpx;
  width: 100%;
  font-size: 30rpx;
  padding: 10rpx 50rpx;
  display: flex;
}

.summary-content {
  font-size: 28rpx;
  padding: 20rpx 50rpx;
}

.wechat-tap {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 150rpx;
  right: 50rpx;
  border-radius: 40rpx;
}

.wechat-tap button {
  background-image: url(../../public/icon/wechat.png);
  background-size: 100% 100%;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-repeat: no-repeat;
  border: none;
}

.contact image {
  z-index: 1;
}
