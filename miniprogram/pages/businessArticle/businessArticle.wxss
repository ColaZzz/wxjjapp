/* miniprogram/pages/businessArticle/businessArticle.wxss */
@import "../../style/public.wxss";

.container{
  background-color: #f6f6f6;
}

.swiper{
  width: 100%;
  height: 450rpx;
}

.header{
  width: 100%;
  /* height: 180rpx; */
  margin: 20rpx 0;
  background-color: #fff;
  position: relative;
}

.content{
  width: 100%;
}

.content image{
  width: 100%;
}

.title{
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 10rpx;
  padding-left: 80rpx;
}

.subtitle{
  font-size: 24rpx;
  padding-bottom: 20rpx;
  font-family: Hiragino Sans GB;
}

.position{
  font-size: 26rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  padding-left: 80rpx;
  border-top: 1rpx solid #f6f6f6;
  color: #ff6a6a;
  font-weight: bold;
}

.title-icon{
  position: absolute;
  top: 7rpx;
  left: 30rpx;
}

.title-icon image{
  width: 1em;
  height: 1em;
}

.position-icon{
  position: absolute;
  bottom: 10rpx;
  left: 30rpx;
}

.position-icon image{
  width: 1em;
  height: 1em;
}

.padding-left{
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.content-name{
  width: 100%;
  height: 1.4em;
  background-color: #fff;
  position: relative;
}

.content-text{
  font-size: 32rpx;
  padding-top: 0.2em;
  padding-left: 50rpx;
}

.content-rectangle{
  position: absolute;
  width: 10rpx;
  height: 1em;
  background-color: #ff6a6a;
  top: 0.2em;
  left: 30rpx;
}

/* 评论框 */
.input_null{
color: #C9C9C9;
}
 
.release{
display: flex;
align-items: flex-end; /*底部对齐*/
justify-content: space-between; /*两端对齐*/
box-sizing: border-box;
position: fixed;
left: 0;
bottom: 0;
width: 100%;
padding: 18rpx 0 18rpx 30rpx;
background-color: #F7F8F7;
font-size: 28rpx;
z-index: 999;
}
.release .text{
width: 604rpx;
min-height: 34rpx;
max-height: 102rpx; /*最多显示三行*/
border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
border-style: solid;
border-color: #ffffff;
line-height: 34rpx;
font-size: 28rpx;
background-color: #ffffff;
border-radius: 4rpx;
}
.release .submit{
width: 116rpx;
height: 64rpx;
line-height: 64rpx;
text-align: center;
color: #66CC00;
}
