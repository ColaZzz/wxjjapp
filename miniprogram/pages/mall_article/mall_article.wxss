/* miniprogram/pages/mall_article/mall_article.wxss */
@import "../../style/public.wxss";

.container {
  background-color: #f6f6f6;
  height: 100%;
}

.header {
  width: 100%;
  height: 250rpx;
  border-bottom: 3rpx solid #f6f6f6;
  position: relative;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}

.content {
  width: 95%;
  height: 100%;
  padding: 20rpx 0;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.title {
  height: 60%;
  font-size: 34rpx;
  padding-left: 30rpx;
  line-height: 390%;
}

.subtitle {
  height: 40%;
  width: 550rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.state {
  width: 140rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  text-align: right;
  font-size: 30rpx;
  color: #ff6a6a;
  font-family: 微软雅黑;
}

.timestamp {
  width: 140rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 90rpx;
  text-align: right;
  font-size: 24rpx;
  color: #ff6a6a;
  font-family: 微软雅黑;
}

.recommend {
  width: 95%;
  height: 250rpx;
  background-color: #ffffff;
}

.recommend-cell {
  height: 200rpx;
  width: 250rpx;
}

